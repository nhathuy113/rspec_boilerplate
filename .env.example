# Database Configuration
# These variables are used by docker-entrypoint.sh for MySQL connection checks
# and can be overridden in docker-compose.yml or your environment

# MySQL host (default: mysql)
DB_HOST=mysql

# MySQL username (default: root)
DB_USER=root

# MySQL password (default: password)
DB_PASSWORD=password

# Additional environment variables for reference
# These are used in docker-compose.yml

# Rails environment
RAILS_ENV=development

# Database URL for Rails application
# Format: mysql2://username:password@host:port/database_name
DATABASE_URL=mysql2://root:password@mysql:3306/rspec_boilerplate_development

# MySQL root password (used by MySQL container)
MYSQL_ROOT_PASSWORD=password

# MySQL database name
MYSQL_DATABASE=rspec_boilerplate_development

# Google OAuth (if using)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# PostgreSQL Configuration (if using)
POSTGRES_PASSWORD=password
POSTGRES_DATABASE=rspec_boilerplate_legacy_development
POSTGRES_USER=rspec_boilerplate
