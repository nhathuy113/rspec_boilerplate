# Rails Configuration
RAILS_ENV=development
SECRET_KEY_BASE=your_secret_key_here

# MySQL Configuration (Primary)  
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=rspec_boilerplate_development

# Database URLs
DATABASE_URL=mysql2://root:password@mysql:3306/rspec_boilerplate_development

# Test Database Configuration
DATABASE_HOST=mysql
DATABASE_USERNAME=root
DATABASE_PASSWORD=password

# PostgreSQL Configuration (Legacy)
# Official PostgreSQL Docker image environment variables
POSTGRES_DB=rspec_boilerplate_legacy_development
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secret

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200

# Redis Configuration (Production)
REDIS_URL=redis://redis:6379/0

# Rails Production Settings
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true
