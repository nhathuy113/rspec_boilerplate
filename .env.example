# ==========================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ==========================================

# MySQL Configuration (Primary Database)
DB_HOST=mysql
DB_USER=root
DB_PASSWORD=password
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=rspec_boilerplate_development

# Rails Configuration
RAILS_ENV=development
DATABASE_URL=mysql2://root:password@mysql:3306/rspec_boilerplate_development

# PostgreSQL Configuration (Legacy/DevContainer)
POSTGRES_PASSWORD=secret
POSTGRES_DATABASE=rspec_boilerplate_legacy_development
POSTGRES_USER=rspec_boilerplate

# External API Configuration (Optional)
# Uncomment and configure when needed:
# GOOGLE_CLIENT_ID=your_google_client_id_here
# GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ==========================================
# DEVCONTAINER PORT OVERRIDES
# ==========================================
# When using .devcontainer/docker-compose.yml:
# MySQL available at: localhost:3307
# PostgreSQL available at: localhost:5433

# ==========================================
# PRODUCTION CONFIGURATION TEMPLATE
# ==========================================
# Copy these to production .env file:
# DATABASE_URL=mysql2://username:password@hostname:port/database_name
# SECRET_KEY_BASE=run_rails_secret_to_generate_this
# MYSQL_ROOT_PASSWORD=secure_production_password
# MYSQL_DATABASE=rspec_boilerplate_production
# RAILS_SERVE_STATIC_FILES=true
# RAILS_LOG_TO_STDOUT=true
